<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
    <metadata>
        <id>CodingConventionsCop</id>
        <version>$version$</version>
        <title>CodingConventionsCop</title>
        <authors>Synvata</authors>
        <owners>Synvata</owners>
        <licenseUrl>https://github.com/Synvata/CodingConventionsCop/blob/master/LICENSE</licenseUrl>
        <projectUrl>https://github.com/Synvata/CodingConventionsCop</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>Code Conventions Cop for Synvata LLC.</description>
        <releaseNotes>
            This extension will help you to follow the coding conventions.
            It includes the following coding conventions:
            1. One source file has only one type declaration.
            2. The name of an awaitable method should end with Async suffix.
            3. Indent with 4 spaces instead of 1 tab.
        </releaseNotes>
        <copyright>Copyright 2015</copyright>
        <tags>Synvata</tags>
    </metadata>
    <!-- The convention for analyzers is to put language agnostic dlls in analyzers\dotnet and language specific analyzers in either analyzers\dotnet\cs or analyzers\dotnet\vb -->
    <files>
        <file src="*.dll" target="analyzers\dotnet\cs" exclude="**\Microsoft.CodeAnalysis.*;**\System.Collections.Immutable.*;**\System.Reflection.Metadata.*;**\System.Composition.*" />
        <file src="tools\*.ps1" target="tools\" />
    </files>
</package>